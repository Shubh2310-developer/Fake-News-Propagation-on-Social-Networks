{
  "dashboard": {
    "id": null,
    "title": "Kubernetes Cluster Overview",
    "tags": ["kubernetes", "cluster", "infrastructure", "nodes"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "hideControls": false,
    "links": [],
    "liveNow": false,
    "weekStart": "",
    "refresh": "30s",
    "schemaVersion": 37,
    "version": 1,
    "description": "Comprehensive Kubernetes cluster monitoring including nodes, pods, networking, and resource utilization",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "node",
          "options": [],
          "query": "label_values(up{job=\"kubelet\"}, node)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        },
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "namespace",
          "options": [],
          "query": "label_values(kube_namespace_info, namespace)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "changes(kube_node_info[2m]) > 0",
          "iconColor": "yellow",
          "name": "Node Changes",
          "titleFormat": "Node Event: {{node}}",
          "useValueForTime": false
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "üéõÔ∏è Cluster Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(up{job=\"kubelet\"} == 1)",
            "legendFormat": "Healthy Nodes",
            "refId": "A"
          },
          {
            "expr": "count(kube_namespace_info)",
            "legendFormat": "Namespaces",
            "refId": "B"
          },
          {
            "expr": "count(kube_pod_info{namespace=~\"$namespace\"})",
            "legendFormat": "Total Pods",
            "refId": "C"
          },
          {
            "expr": "count(kube_pod_status_phase{namespace=~\"$namespace\",phase=\"Running\"})",
            "legendFormat": "Running Pods",
            "refId": "D"
          },
          {
            "expr": "count(kube_deployment_info{namespace=~\"$namespace\"})",
            "legendFormat": "Deployments",
            "refId": "E"
          },
          {
            "expr": "count(kube_service_info{namespace=~\"$namespace\"})",
            "legendFormat": "Services",
            "refId": "F"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "üñ•Ô∏è Node Resource Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "(1 - avg by (node) (rate(node_cpu_seconds_total{mode=\"idle\", node=~\"$node\"}[5m]))) * 100",
            "legendFormat": "{{node}} - CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "((node_memory_MemTotal_bytes{node=~\"$node\"} - node_memory_MemAvailable_bytes{node=~\"$node\"}) / node_memory_MemTotal_bytes{node=~\"$node\"}) * 100",
            "legendFormat": "{{node}} - Memory Usage %",
            "refId": "B"
          },
          {
            "expr": "((node_filesystem_size_bytes{node=~\"$node\",fstype!=\"tmpfs\"} - node_filesystem_avail_bytes{node=~\"$node\",fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{node=~\"$node\",fstype!=\"tmpfs\"}) * 100",
            "legendFormat": "{{node}} - Disk Usage %",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "Usage %",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "line"}
            },
            "mappings": [],
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "legend": {
            "calcs": ["lastNotNull", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        }
      },
      {
        "id": 3,
        "title": "üìä Pod Status Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{namespace=~\"$namespace\",phase=\"Running\"})",
            "legendFormat": "Running",
            "refId": "A"
          },
          {
            "expr": "count(kube_pod_status_phase{namespace=~\"$namespace\",phase=\"Pending\"})",
            "legendFormat": "Pending",
            "refId": "B"
          },
          {
            "expr": "count(kube_pod_status_phase{namespace=~\"$namespace\",phase=\"Failed\"})",
            "legendFormat": "Failed",
            "refId": "C"
          },
          {
            "expr": "count(kube_pod_status_phase{namespace=~\"$namespace\",phase=\"Succeeded\"})",
            "legendFormat": "Succeeded",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "hideFrom": {"legend": false, "tooltip": false, "viz": false}
            },
            "mappings": [],
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Running"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
            },
            {
              "matcher": {"id": "byName", "options": "Failed"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            },
            {
              "matcher": {"id": "byName", "options": "Pending"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 4,
        "title": "üåê Network I/O",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{node=~\"$node\",device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{node}} - {{device}} - Receive",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{node=~\"$node\",device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{node}} - {{device}} - Transmit",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "bits/sec",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "off"}
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [{"color": "green", "value": null}]
            },
            "unit": "bps"
          }
        },
        "options": {
          "legend": {
            "calcs": ["lastNotNull", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        }
      },
      {
        "id": 5,
        "title": "üíæ Storage I/O",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total{node=~\"$node\"}[5m])",
            "legendFormat": "{{node}} - {{device}} - Read",
            "refId": "A"
          },
          {
            "expr": "rate(node_disk_written_bytes_total{node=~\"$node\"}[5m])",
            "legendFormat": "{{node}} - {{device}} - Write",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "bytes/sec",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "off"}
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [{"color": "green", "value": null}]
            },
            "unit": "Bps"
          }
        },
        "options": {
          "legend": {
            "calcs": ["lastNotNull", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        }
      },
      {
        "id": 6,
        "title": "üîÑ Container Resource Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\",container!=\"POD\",container!=\"\"}[5m])) by (namespace, pod, container) * 100",
            "legendFormat": "{{namespace}}/{{pod}}/{{container}} - CPU %",
            "refId": "A"
          },
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=~\"$namespace\",container!=\"POD\",container!=\"\"}) by (namespace, pod, container) / 1024/1024",
            "legendFormat": "{{namespace}}/{{pod}}/{{container}} - Memory (MB)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "off"}
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [{"color": "green", "value": null}]
            }
          }
        },
        "options": {
          "legend": {
            "calcs": ["lastNotNull"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        }
      },
      {
        "id": 7,
        "title": "‚öôÔ∏è Kubernetes Events",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "kube_event_info{namespace=~\"$namespace\"}",
            "format": "table",
            "legendFormat": "",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "inspect": false
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Time"
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "reason": "Reason",
                "type": "Type",
                "object": "Object"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "üè∑Ô∏è Node Labels & Capacity",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "kube_node_info{node=~\"$node\"}",
            "format": "table",
            "legendFormat": "",
            "refId": "A"
          },
          {
            "expr": "kube_node_status_capacity{node=~\"$node\",resource=\"cpu\"}",
            "format": "table",
            "legendFormat": "",
            "refId": "B"
          },
          {
            "expr": "kube_node_status_capacity{node=~\"$node\",resource=\"memory\"} / 1024/1024/1024",
            "format": "table",
            "legendFormat": "",
            "refId": "C"
          },
          {
            "expr": "kube_node_status_allocatable{node=~\"$node\",resource=\"pods\"}",
            "format": "table",
            "legendFormat": "",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "inspect": false
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "Node"
            }
          ]
        },
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true,
                "Time": true
              },
              "indexByName": {},
              "renameByName": {
                "node": "Node",
                "kernel_version": "Kernel",
                "kubelet_version": "Kubelet",
                "container_runtime_version": "Runtime",
                "Value #B": "CPU Cores",
                "Value #C": "Memory (GB)",
                "Value #D": "Max Pods"
              }
            }
          }
        ]
      }
    ]
  }
}