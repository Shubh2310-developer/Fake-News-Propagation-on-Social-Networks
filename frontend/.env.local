# ==============================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# ==============================================
# This file is for local development and should NOT be committed to git.
# Copy from .env.example and customize for your local setup.

# ==============================================
# API CONFIGURATION
# ==============================================

# The public URL of the backend API
NEXT_PUBLIC_API_URL=http://localhost:8000

# API version
NEXT_PUBLIC_API_VERSION=v1

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Application settings
NEXT_PUBLIC_APP_NAME=Fake News Game Theory
NEXT_PUBLIC_APP_DESCRIPTION=Interactive platform for analyzing fake news propagation through game theory
NEXT_PUBLIC_ENVIRONMENT=development

# Development features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_REACT_DEVTOOLS=true
NEXT_PUBLIC_VERBOSE_LOGGING=true
NEXT_PUBLIC_MOCK_API=false

# ==============================================
# STYLING & THEMING
# ==============================================

NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ==============================================
# INTERNATIONALIZATION
# ==============================================

NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr

# ==============================================
# CACHE CONFIGURATION
# ==============================================

NEXT_PUBLIC_CACHE_DURATION_SHORT=300
NEXT_PUBLIC_CACHE_DURATION_MEDIUM=3600
NEXT_PUBLIC_CACHE_DURATION_LONG=86400

# ==============================================
# GAME THEORY SPECIFIC SETTINGS
# ==============================================

# Default simulation parameters for development
NEXT_PUBLIC_DEFAULT_NETWORK_SIZE=50
NEXT_PUBLIC_DEFAULT_SIMULATION_ROUNDS=5
NEXT_PUBLIC_MAX_SIMULATION_SIZE=500
NEXT_PUBLIC_MAX_SIMULATION_ROUNDS=50

# Visualization settings optimized for development
NEXT_PUBLIC_MAX_CHART_DATA_POINTS=500
NEXT_PUBLIC_ANIMATION_DURATION=300
NEXT_PUBLIC_CHART_UPDATE_INTERVAL=1000

# ==============================================
# BUILD-TIME CONFIGURATION
# ==============================================

# Development build settings
ANALYZE_BUNDLE=false
BUNDLE_ANALYZER_PORT=8888
GENERATE_SOURCEMAP=true

# ==============================================
# EXTERNAL SERVICES (Development)
# ==============================================

# Leave empty for development unless testing integrations
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_LOGROCKET_APP_ID=

# Social authentication (if testing)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NEXT_PUBLIC_GITHUB_CLIENT_ID=

# ==============================================
# PERFORMANCE & MONITORING (Development)
# ==============================================

NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=1.0
NEXT_PUBLIC_ERROR_SAMPLE_RATE=1.0
NEXT_PUBLIC_FEATURE_FLAGS_KEY=

# ==============================================
# SECURITY (Development)
# ==============================================

NEXT_PUBLIC_CSP_REPORT_URI=
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=1000
NEXT_PUBLIC_RATE_LIMIT_WINDOW=3600