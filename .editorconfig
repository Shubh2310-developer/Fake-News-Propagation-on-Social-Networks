# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{ini,cfg,toml}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# CSS files
[*.{css,scss,sass,less}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Go files (if used)
[*.go]
indent_style = tab
indent_size = 4

# R files (for data science)
[*.{r,R}]
indent_size = 2

# XML files
[*.{xml,xsd,xsl}]
indent_size = 2

# Jupyter notebooks
[*.ipynb]
indent_size = 2

# Terraform files
[*.{tf,tfvars,hcl}]
indent_size = 2

# Game Theory specific files
[*.{game,payoff,strategy}]
indent_size = 2

# Network analysis files
[*.{graph,net,network}]
indent_size = 2

# Machine Learning config files
[*.{model,config}]
indent_size = 2

# CI/CD files
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

[requirements*.txt]
indent_size = 0

# Documentation
[docs/**/*.{md,rst}]
max_line_length = 100
trim_trailing_whitespace = false

# Test files
[**/tests/**/*.py]
max_line_length = 100

[**/__tests__/**/*.{js,ts,jsx,tsx}]
max_line_length = 100