{
  "dashboard": {
    "id": null,
    "title": "Application Health - Golden Signals",
    "tags": ["application", "golden-signals", "sre"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "hideControls": false,
    "links": [],
    "liveNow": false,
    "weekStart": "",
    "refresh": "30s",
    "schemaVersion": 37,
    "version": 1,
    "description": "Golden Signals monitoring for the Fake News Game Theory Platform - Latency, Traffic, Errors, and Saturation",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "fakenews-production",
            "value": "fakenews-production"
          },
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "name": "namespace",
          "options": [],
          "query": "label_values(up, kubernetes_namespace)",
          "refresh": 1,
          "regex": "fakenews-.*",
          "skipUrlSync": false,
          "sort": 0,
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        },
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "service",
          "options": [],
          "query": "label_values(up{kubernetes_namespace=\"$namespace\"}, service)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        },
        {
          "current": {
            "selected": false,
            "text": "5m",
            "value": "5m"
          },
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "name": "interval",
          "options": [
            {"text": "1m", "value": "1m"},
            {"text": "5m", "value": "5m"},
            {"text": "10m", "value": "10m"},
            {"text": "15m", "value": "15m"}
          ],
          "query": "1m,5m,10m,15m",
          "skipUrlSync": false,
          "type": "custom"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "changes(process_start_time_seconds{kubernetes_namespace=\"$namespace\"}[1m]) > 0",
          "iconColor": "red",
          "name": "Service Restarts",
          "titleFormat": "Service Restart: {{service}}",
          "useValueForTime": false
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "üåê Golden Signals Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "avg(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval]))",
            "legendFormat": "Request Rate",
            "refId": "A"
          },
          {
            "expr": "avg(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\",status=~\"5..\"}[$interval])) / avg(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) * 100",
            "legendFormat": "Error Rate %",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) * 1000",
            "legendFormat": "95th %ile Latency (ms)",
            "refId": "C"
          },
          {
            "expr": "avg(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}[$interval])) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "off"}
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "üìà Traffic (Requests per Second)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) by (service)",
            "legendFormat": "{{service}} - Total RPS",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\",status=~\"2..\"}[$interval])) by (service)",
            "legendFormat": "{{service}} - Success (2xx)",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\",status=~\"4..\"}[$interval])) by (service)",
            "legendFormat": "{{service}} - Client Errors (4xx)",
            "refId": "C"
          },
          {
            "expr": "sum(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\",status=~\"5..\"}[$interval])) by (service)",
            "legendFormat": "{{service}} - Server Errors (5xx)",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "Requests/sec",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "off"}
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [{"color": "green", "value": null}]
            },
            "unit": "reqps"
          }
        },
        "options": {
          "legend": {
            "calcs": ["lastNotNull", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        }
      },
      {
        "id": 3,
        "title": "‚ö° Latency (Response Time)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) * 1000",
            "legendFormat": "{{service}} - 50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) * 1000",
            "legendFormat": "{{service}} - 95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) * 1000",
            "legendFormat": "{{service}} - 99th percentile",
            "refId": "C"
          },
          {
            "expr": "avg(rate(http_request_duration_seconds_sum{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) / avg(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) * 1000",
            "legendFormat": "{{service}} - Average",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "Response Time (ms)",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "line"}
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 200},
                {"color": "red", "value": 500}
              ]
            },
            "unit": "ms"
          }
        },
        "options": {
          "legend": {
            "calcs": ["lastNotNull", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        }
      },
      {
        "id": 4,
        "title": "‚ùå Error Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\",status=~\"4..\"}[$interval])) by (service) / sum(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) by (service) * 100",
            "legendFormat": "{{service}} - 4xx Error Rate %",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\",status=~\"5..\"}[$interval])) by (service) / sum(rate(http_requests_total{kubernetes_namespace=\"$namespace\",service=~\"$service\"}[$interval])) by (service) * 100",
            "legendFormat": "{{service}} - 5xx Error Rate %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "Error Rate %",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "line"}
            },
            "mappings": [],
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "legend": {
            "calcs": ["lastNotNull", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        }
      },
      {
        "id": 5,
        "title": "üíæ Saturation (Resource Usage)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "avg(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}[$interval])) by (pod) * 100",
            "legendFormat": "{{pod}} - CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "avg(container_memory_working_set_bytes{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}) by (pod) / avg(container_spec_memory_limit_bytes{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}) by (pod) * 100",
            "legendFormat": "{{pod}} - Memory Usage %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "Usage %",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {"legend": false, "tooltip": false, "viz": false},
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {"group": "A", "mode": "none"},
              "thresholdsStyle": {"mode": "line"}
            },
            "mappings": [],
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "legend": {
            "calcs": ["lastNotNull", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        }
      }
    ]
  }
}