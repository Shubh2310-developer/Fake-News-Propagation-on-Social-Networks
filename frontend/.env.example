# ==============================================
# FAKE NEWS GAME THEORY FRONTEND - ENVIRONMENT VARIABLES
# ==============================================
# This is an example file. Copy to .env.local and fill in your values.
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.

# ==============================================
# API CONFIGURATION
# ==============================================

# The public URL of the backend API
# This is exposed to the browser, so don't include secrets
NEXT_PUBLIC_API_URL=http://localhost:8000

# Internal API URL for server-side requests (BFF proxy)
# This is NOT exposed to the browser and can include internal network addresses
# Falls back to NEXT_PUBLIC_API_URL if not set
INTERNAL_API_URL=http://localhost:8000

# API version (if versioned)
NEXT_PUBLIC_API_VERSION=v1

# WebSocket URL for real-time updates (if implemented)
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Application name and branding
NEXT_PUBLIC_APP_NAME=Fake News Game Theory
NEXT_PUBLIC_APP_DESCRIPTION=Interactive platform for analyzing fake news propagation through game theory

# Environment (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# Analytics (if using Google Analytics, Mixpanel, etc.)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error tracking (if using Sentry, LogRocket, etc.)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_LOGROCKET_APP_ID=

# ==============================================
# AUTHENTICATION (NextAuth.js)
# ==============================================

# NextAuth.js Secret (Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# NextAuth.js URL (Base URL of your application)
NEXTAUTH_URL=http://localhost:3000

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/fake_news_db?schema=public

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Social authentication (Public - exposed to browser)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NEXT_PUBLIC_GITHUB_CLIENT_ID=

# ==============================================
# PERFORMANCE & MONITORING
# ==============================================

# Performance monitoring
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1
NEXT_PUBLIC_ERROR_SAMPLE_RATE=1.0

# Feature flags (if using LaunchDarkly, Split.io, etc.)
NEXT_PUBLIC_FEATURE_FLAGS_KEY=

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================

# Enable React DevTools in production (not recommended)
NEXT_PUBLIC_REACT_DEVTOOLS=false

# Enable verbose logging
NEXT_PUBLIC_VERBOSE_LOGGING=false

# Mock API responses (for development/testing)
NEXT_PUBLIC_MOCK_API=false

# ==============================================
# STYLING & THEMING
# ==============================================

# Custom theme configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ==============================================
# INTERNATIONALIZATION
# ==============================================

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr

# ==============================================
# CACHE CONFIGURATION
# ==============================================

# Cache durations (in seconds)
NEXT_PUBLIC_CACHE_DURATION_SHORT=300
NEXT_PUBLIC_CACHE_DURATION_MEDIUM=3600
NEXT_PUBLIC_CACHE_DURATION_LONG=86400

# ==============================================
# SECURITY
# ==============================================

# Content Security Policy (development only)
NEXT_PUBLIC_CSP_REPORT_URI=

# Rate limiting (if implemented in frontend)
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=3600

# ==============================================
# GAME THEORY SPECIFIC
# ==============================================

# Default simulation parameters
NEXT_PUBLIC_DEFAULT_NETWORK_SIZE=100
NEXT_PUBLIC_DEFAULT_SIMULATION_ROUNDS=10
NEXT_PUBLIC_MAX_SIMULATION_SIZE=1000
NEXT_PUBLIC_MAX_SIMULATION_ROUNDS=100

# Visualization settings
NEXT_PUBLIC_MAX_CHART_DATA_POINTS=1000
NEXT_PUBLIC_ANIMATION_DURATION=300
NEXT_PUBLIC_CHART_UPDATE_INTERVAL=1000

# ==============================================
# BUILD-TIME CONFIGURATION
# ==============================================

# Build optimization
ANALYZE_BUNDLE=false
BUNDLE_ANALYZER_PORT=8888

# Source maps (enable for debugging, disable for production)
GENERATE_SOURCEMAP=true