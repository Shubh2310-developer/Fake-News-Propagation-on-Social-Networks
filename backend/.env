# ===========================================
# GTDS Backend Environment Configuration
# ===========================================

# Application Settings
APP_NAME=GTDS Fake News Game Theory API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@127.0.0.1:5432/gtds_db
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=gtds_db
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD_HERE
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security & Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Machine Learning Configuration
ML_MODEL_PATH=./ml_models/
BERT_MODEL_NAME=bert-base-uncased
CLASSIFICATION_THRESHOLD=0.5
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# Game Theory Simulation
SIMULATION_MAX_ROUNDS=1000
SIMULATION_DEFAULT_PLAYERS=3
EQUILIBRIUM_TOLERANCE=1e-6
CONVERGENCE_MAX_ITERATIONS=100

# Network Analysis
NETWORK_MAX_NODES=10000
PROPAGATION_STEPS=50
INFLUENCE_THRESHOLD=0.1

# File Storage
UPLOAD_DIR=./uploads/
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=["csv", "json", "txt"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/app.log

# External APIs
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@127.0.0.1:5432/gtds_test_db
TEST_REDIS_URL=redis://127.0.0.1:6379/1

# Docker/Production Overrides
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
REDIS_HOST=redis
REDIS_PORT=6379

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60